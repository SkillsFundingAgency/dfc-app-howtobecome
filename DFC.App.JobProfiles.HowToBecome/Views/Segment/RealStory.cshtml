@model DFC.App.JobProfiles.HowToBecome.ViewModels.DataModels.RealStory;

<section class="job-profile-subsection" id="real-story">
    <h3>@Model.Title</h3>
    <div class="job-profile-subsection-content">
        <p>@Model.Summary</p>

        @if (Model.Thumbnail != null)
        {
            <img src="@Model.Thumbnail.Url" alt="@Model.Thumbnail.Text" />
        }

        @Html.Raw(Model.BodyHtml)
    </div>
</section>
